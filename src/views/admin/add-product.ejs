<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Product - Arjanmal Attarchand</title>
    <link rel="stylesheet" href="styles.css">
</head>
<body>
    <div class="main-wrapper">
        <div id="dashboardPage" class="dashboard-container" style="display: flex;">
            <!-- Header Placeholder -->
            <div id="header-placeholder"></div>

            <!-- Dashboard Body -->
            <div class="dashboard-body">
                <!-- Sidebar Placeholder -->
                <div id="sidebar-placeholder"></div>

                <!-- Main Content -->
                <main class="main-content">
                    <div class="content-header">
                        <h1>Add Product</h1>
                        <p>Create a new product listing</p>
                    </div>
                    <div class="content-body">
                        <div class="form-container">
                            <div class="success-message" id="addProductSuccess"></div>
                            <form id="addProductForm">
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <label for="industry">Industry *</label>
                                        <select id="industry" required>
                                            <option value="">Select Industry</option>
                                        </select>
                                    </div>
                                    <div class="form-group-inline">
                                        <label for="productName">Product Name *</label>
                                        <input type="text" id="productName" required>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline" style="grid-column: 1/-1;">
                                        <label for="description">Description *</label>
                                        <textarea id="description" required></textarea>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <label for="subCategory">Sub Category *</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="subCategory">
                                                <span class="multi-select-placeholder">Select sub categories</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <label for="size">Size *</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="size">
                                                <span class="multi-select-placeholder">Select sizes</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <label for="color">Color</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="color">
                                                <span class="multi-select-placeholder">Select colors</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <label for="shape">Shape</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="shape">
                                                <span class="multi-select-placeholder">Select shapes</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <label for="neckType">Neck Type</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="neckType">
                                                <span class="multi-select-placeholder">Select neck types</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <label for="material">Material</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="material">
                                                <span class="multi-select-placeholder">Select materials</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <label for="jarsBottles">Jars & Bottles</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="jarsBottles">
                                                <span class="multi-select-placeholder">Select jars & bottles</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <label for="fragrances">Fragrances</label>
                                        <div class="multi-select-wrapper">
                                            <div class="multi-select-display" data-target="fragrances">
                                                <span class="multi-select-placeholder">Select fragrances</span>
                                            </div>
                                            <div class="multi-select-dropdown"></div>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="featured">
                                            <label for="featured">Featured Product</label>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="topRated">
                                            <label for="topRated">Top Rated</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="bestSeller">
                                            <label for="bestSeller">Best Seller</label>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="onSale">
                                            <label for="onSale">On Sale</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="outofstock">
                                            <label for="outofstock">Out of Stock</label>
                                        </div>
                                    </div>
                                    <div class="form-group-inline">
                                        <div class="checkbox-group">
                                            <input type="checkbox" id="active" checked>
                                            <label for="active">Active</label>
                                        </div>
                                    </div>
                                </div>
                                <div class="form-row">
                                    <div class="form-group-inline" style="grid-column: 1/-1;">
                                        <label>Product Images *</label>
                                        <div class="image-upload" id="imageUpload">
                                            <input type="file" id="imageInput" accept="image/*" multiple>
                                            <p>ðŸ“· Click to upload images</p>
                                            <p style="font-size: 12px; color: #999; margin-top: 8px;">You can select multiple images</p>
                                        </div>
                                        <div class="image-preview" id="imagePreview"></div>
                                    </div>
                                </div>
                                <div class="form-actions">
                                    <button type="submit" class="btn btn-save">Save Product</button>
                                    <button type="button" class="btn btn-cancel" id="cancelAddProduct">Cancel</button>
                                </div>
                            </form>
                        </div>
                    </div>
                </main>
            </div>

            <!-- Footer Placeholder -->
            <div id="footer-placeholder"></div>
        </div>
    </div>
    <script src="js/partials-loader.js"></script>
    <script src="js/units-sync.js"></script>
    <script src="js/script.js"></script>
    <script src="js/header-handler.js"></script>
    <script>
        // Initialize dropdowns after everything loads
        function initAddProductPage() {
            // Wait for script.js to be ready
            setTimeout(() => {
                // Remove initialization flags to allow re-initialization
                document.querySelectorAll('.multi-select-display').forEach(display => {
                    display.removeAttribute('data-initialized');
                });
                
                if (typeof window.initMultiSelect === 'function') {
                    window.initMultiSelect();
                }
                if (typeof window.populateIndustryDropdown === 'function') {
                    window.populateIndustryDropdown();
                }
                if (typeof updateAddProductDropdowns === 'function') {
                    updateAddProductDropdowns();
                }
            }, 1000);
        }
        
        document.addEventListener('DOMContentLoaded', () => {
            initAddProductPage();
        });
        
        window.addEventListener('partialsLoaded', () => {
            setTimeout(() => {
                initAddProductPage();
            }, 800);
        });
        
        // Listen for units updates
        window.addEventListener('unitsUpdated', () => {
            setTimeout(() => {
                if (typeof window.populateIndustryDropdown === 'function') {
                    window.populateIndustryDropdown();
                }
                // Re-initialize multi-select dropdowns
                document.querySelectorAll('.multi-select-display').forEach(display => {
                    display.removeAttribute('data-initialized');
                });
                if (typeof window.initMultiSelect === 'function') {
                    window.initMultiSelect();
                }
            }, 200);
        });
    </script>
</body>
</html>
