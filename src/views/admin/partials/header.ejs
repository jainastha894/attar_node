<!-- Fixed Header -->
<link rel="icon" href="/favicon.ico" type="image/x-icon">
<link rel="shortcut icon" href="/favicon.ico" type="image/x-icon">
<link rel="apple-touch-icon" href="/favicon.png">

<header class="dashboard-header">
    <div class="header-left">
        <button class="hamburger-btn" id="hamburgerBtn">‚ò∞</button>
    </div>
    <div class="header-center">
        <div class="company-name">Arjanmal Attarchand</div>
        <div class="panel-subtitle">Admin Panel</div>
    </div>
    <div class="header-right">
        <div class="user-profile-wrapper">
            <div class="user-profile" id="userProfileBtn">
                <div class="user-avatar" id="userAvatar">
                    <% if (typeof admin !== 'undefined' && admin && admin.profilePic) { %>
                    <img src="<%= admin.profilePic %>" alt="Profile" id="userAvatarImg"
                        style="display: block; width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                    <span id="userAvatarText" style="display: none;"><%= admin && admin.fullName ? admin.fullName.charAt(0).toUpperCase() : 'A' %></span>
                    <% } else { %>
                    <img src="" alt="Profile" id="userAvatarImg"
                        style="display: none; width: 100%; height: 100%; object-fit: cover; border-radius: 50%;">
                    <span id="userAvatarText" style="display: flex; align-items: center; justify-content: center; width: 100%; height: 100%; font-size: 20px; font-weight: bold; color: #000000; background: #FFD700; border-radius: 50%;"><%= typeof admin !== 'undefined' && admin && admin.fullName ? admin.fullName.charAt(0).toUpperCase() : 'A' %></span>
                    <% } %>
                </div>
                <div class="user-info">
                    <div class="user-name" id="userNameDisplay"><%= typeof admin !== 'undefined' && admin && admin.fullName ? admin.fullName : 'Admin User' %></div>
                    <div class="user-role" id="userRoleDisplay"><%= typeof admin !== 'undefined' && admin && admin.role ? admin.role : 'Administrator' %></div>
                </div>
                <span class="dropdown-arrow">‚ñº</span>
            </div>
            <div class="user-dropdown" id="userDropdown">
                <div class="dropdown-item" id="profileSettingsBtn">
                    <span class="dropdown-icon">‚öôÔ∏è</span>
                    <span>Edit Profile</span>
                </div>
                <div class="dropdown-item" id="viewProfileBtn">
                    <span class="dropdown-icon">üë§</span>
                    <span>View Profile</span>
                </div>
                <div class="dropdown-divider"></div>
                <div class="dropdown-item logout-item" id="dropdownLogoutBtn">
                    <span class="dropdown-icon">üö™</span>
                    <span>Logout</span>
                </div>
            </div>
        </div>
        <a href="/admin/logout">
            <button class="logout-circle-btn" id="headerLogoutBtn" title="Logout">
                üö™
            </button>
        </a>

    </div>
</header>