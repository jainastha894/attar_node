        // ---------- PRODUCT PAGE 1 â€“ FULL IMAGE + NAME TOP-RIGHT ----------
        async function addProductMainPage(doc, product, logoData) {
            const pageWidth = doc.internal.pageSize.getWidth();
            const pageHeight = doc.internal.pageSize.getHeight();

            // Dark background
            drawRect(doc, 0, 0, pageWidth, pageHeight, COLORS.darkBg);

