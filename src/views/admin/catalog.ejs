            const nameLines = doc.splitTextToSize(productName, pageWidth - 20);
            doc.text(nameLines, pageWidth - 10, 18, { align: "right", maxWidth: pageWidth - 20 });

            const hasImages = Array.isArray(product.images) && product.images.length > 0;
            if (!hasImages) return;

            const mainRel = product.images[0];
            const mainPath = getImagePath(mainRel);
            const imgData = await loadImageAsDataURL(mainPath);
            if (!imgData) return;

            const imgMarginX = 5;
            const imgMarginTop = 28;
            const imgWidth = pageWidth - imgMarginX * 2;
            const imgHeight = pageHeight - imgMarginTop - 8;

            try {
                doc.addImage(imgData, "JPEG", imgMarginX, imgMarginTop, imgWidth, imgHeight);
            } catch (e) {
                console.error('Error adding main image:', e);
            }

            // If there is NO additional image, overlay text on the bottom
            const hasExtraImages = product.images.length > 1;
            if (!hasExtraImages && product.description) {
                const panelHeight = 35;
                const panelY = pageHeight - panelHeight - 6;

                drawRect(doc, 5, panelY, pageWidth - 10, panelHeight, COLORS.darkBg);
                doc.setDrawColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                doc.setLineWidth(1);
                doc.rect(5, panelY, pageWidth - 10, panelHeight);

                doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                doc.setFontSize(11);
                doc.setFont(undefined, "normal");

                const descText = product.description.split("\n")[0] || product.description;
                const textLines = doc.splitTextToSize(descText, pageWidth - 18);
                doc.text(textLines, 9, panelY + 12);
            }
        }

        // ---------- PRODUCT PAGE 2 â€“ ALL DETAILS + ADDITIONAL IMAGES ----------
        async function addProductDetailPage(doc, product) {
            const pageWidth = doc.internal.pageSize.getWidth();
            const pageHeight = doc.internal.pageSize.getHeight();
            const marginX = 15;
            let y = 20;

            // Dark background
            drawRect(doc, 0, 0, pageWidth, pageHeight, COLORS.darkBg);

            // Product name - gold text
            doc.setFont(undefined, "bold");
            doc.setFontSize(20);
            doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
            const productName = product.name || "";
            const nameLines = doc.splitTextToSize(productName, pageWidth - marginX * 2);
            doc.text(nameLines, marginX, y);
            y += nameLines.length * 7 + 8;

            // Display ALL product details
            if (product.units) {
                const unitLabels = {
                    'industryList': 'Industry',
                    'subCategoryList': 'Sub Category',
                    'sizeList': 'Size',
                    'colorList': 'Color',
                    'shapeList': 'Shape',
                    'neckTypeList': 'Neck Type',
                    'materialList': 'Material',
                    'fragranceList': 'Fragrance'
                };

                const unitOrder = ['industryList', 'subCategoryList', 'sizeList', 'colorList', 'shapeList', 'neckTypeList', 'materialList', 'fragranceList'];

                for (const key of unitOrder) {
                    if (product.units[key] && Array.isArray(product.units[key]) && product.units[key].length > 0) {
                        const label = unitLabels[key] || key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase());
                        const valueText = product.units[key].join(', ');
                        
                        doc.setFont(undefined, "bold");
                        doc.setFontSize(13);
                        doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                        doc.text(`${label}:`, marginX, y);
                        
                        doc.setFont(undefined, "normal");
                        doc.setFontSize(12);
                        doc.setTextColor(COLORS.white[0], COLORS.white[1], COLORS.white[2]);
                        const valueLines = doc.splitTextToSize(valueText, pageWidth - marginX * 2 - 5);
                        doc.text(valueLines, marginX + 35, y);
                        y += valueLines.length * 5.5 + 6;
                    }
                }

                // Display any remaining units not in the order list
                for (const [key, value] of Object.entries(product.units)) {
                    if (unitOrder.includes(key)) continue;
                    if (Array.isArray(value) && value.length > 0) {
                        let label = key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase());
                        const valueText = value.join(', ');
                        
                        doc.setFont(undefined, "bold");
                        doc.setFontSize(13);
                        doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                        doc.text(`${label}:`, marginX, y);
                        
                        doc.setFont(undefined, "normal");
                        doc.setFontSize(12);
                        doc.setTextColor(COLORS.white[0], COLORS.white[1], COLORS.white[2]);
                        const valueLines = doc.splitTextToSize(valueText, pageWidth - marginX * 2 - 5);
                        doc.text(valueLines, marginX + 35, y);
                        y += valueLines.length * 5.5 + 6;
                    }
                }
            }

            // Description
            if (product.description) {
                doc.setFont(undefined, "bold");
                doc.setFontSize(13);
                doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                doc.text("Description:", marginX, y);
                y += 8;

                doc.setFont(undefined, "normal");
                doc.setFontSize(12);
                doc.setTextColor(COLORS.white[0], COLORS.white[1], COLORS.white[2]);
                const descWidth = pageWidth - marginX * 2;
                const descLines = doc.splitTextToSize(product.description, descWidth);
                doc.text(descLines, marginX, y);
                y += descLines.length * 6 + 12;
            }

            // More Images section
            const hasExtraImages = Array.isArray(product.images) && product.images.length > 1;
            if (hasExtraImages) {
                doc.setFont(undefined, "bold");
                doc.setFontSize(14);
                doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                doc.text("More Images", marginX, y);
                y += 10;

                const otherImages = product.images.slice(1);
                const cols = 3;
                const thumbWidth = (pageWidth - marginX * 2 - (cols - 1) * 6) / cols;
                const thumbHeight = thumbWidth;
                const thumbTop = y;

                let colIndex = 0;
                let rowIndex = 0;

                for (let i = 0; i < otherImages.length; i++) {
                    if (i > 0 && i % cols === 0) {
                        rowIndex++;
                        colIndex = 0;
                    }

                    const src = getImagePath(otherImages[i]);
                    const imgData = await loadImageAsDataURL(src);
                    if (!imgData) {
                        colIndex++;
                        continue;
                    }

                    const x = marginX + colIndex * (thumbWidth + 6);
                    const yPos = thumbTop + rowIndex * (thumbHeight + 8);
                    if (yPos + thumbHeight > pageHeight - 10) break;

                    doc.setDrawColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
                    doc.setLineWidth(1);
                    doc.rect(x - 1, yPos - 1, thumbWidth + 2, thumbHeight + 2);
                    try {
                        doc.addImage(imgData, "JPEG", x, yPos, thumbWidth, thumbHeight);
                    } catch (e) {
                        console.error('Error adding image:', e);
                    }

                    colIndex++;
                }
            }
        }

        // ---------- MAIN â€“ BUILD CATALOGUE ----------
        async function generateCataloguePdf(selectedIndustry = '') {
            const statusDiv = document.getElementById('downloadStatus');
            statusDiv.style.display = 'block';
            statusDiv.textContent = 'Generating PDF... Please wait...';
            statusDiv.style.background = '#fff3cd';
            statusDiv.style.color = '#856404';

            try {
                const doc = new jsPDF({
                    orientation: 'portrait',
                    unit: 'mm',
                    format: 'a4'
                });

                const pageWidth = doc.internal.pageSize.getWidth();
                const pageHeight = doc.internal.pageSize.getHeight();

                // Load logo once
                const logoData = await loadImageAsDataURL(COMPANY_LOGO_URL);

                // Draw main cover page (only once)
                await drawCoverPage(doc, pageWidth, pageHeight, logoData);

                // Group products by industry (case-insensitive)
                const groupsMap = new Map();
                PRODUCTS.forEach((p) => {
                    const industryList = p.units?.industryList || [];
                    industryList.forEach(industry => {
                        const norm = normalizeIndustryName(industry);
                        if (!norm) return;
                        if (!groupsMap.has(norm)) {
                            groupsMap.set(norm, { label: industry, products: [] });
                        }
                        groupsMap.get(norm).products.push(p);
                    });
                });

                // Industry order
                const orderRank = { 'fragnance': 1, 'fragrances': 1, 'food': 2, 'pharma': 3 };

                let groupsToPrint = [];
                if (!selectedIndustry || selectedIndustry === '') {
                    groupsToPrint = Array.from(groupsMap.values()).sort(
                        (a, b) =>
                            (orderRank[normalizeIndustryName(a.label)] || 99) -
                            (orderRank[normalizeIndustryName(b.label)] || 99)
                    );
                } else {
                    const normSel = normalizeIndustryName(selectedIndustry);
                    const grp = groupsMap.get(normSel);
                    if (grp) groupsToPrint = [grp];
                }

                if (!groupsToPrint.length) {
                    statusDiv.textContent = 'No industries/products found.';
                    statusDiv.style.background = '#f8d7da';
                    statusDiv.style.color = '#721c24';
                    return;
                }

                // Process each industry group
                for (const group of groupsToPrint) {
                    const industryName = group.label;
                    const industryProducts = group.products;
                    if (!industryProducts.length) continue;

                    // Add industry intro page (blank page with industry name)
                    doc.addPage();
                    await addIndustryIntroPage(doc, industryName);

                    // Add product pages for each product
                    for (const product of industryProducts) {
                        // Main page (full image)
                        doc.addPage();
                        await addProductMainPage(doc, product, logoData);

                        // Detail page (all details + additional images)
                        doc.addPage();
                        await addProductDetailPage(doc, product);
                    }
                }

                // Add footers to all pages except first (cover)
                const totalPages = doc.internal.pages.length - 1;
                for (let i = 1; i <= totalPages; i++) {
                    doc.setPage(i);
                    if (i === 1) {
                        // Cover page - no footer
                        continue;
                    }
                    drawPageFooter(doc, pageWidth, pageHeight, i, totalPages, null);
                }

                // Download
                const fileName = selectedIndustry 
                    ? `Catalog_${selectedIndustry.replace(/\s+/g, '_')}_${new Date().toISOString().split('T')[0]}.pdf`
                    : `Catalog_All_Products_${new Date().toISOString().split('T')[0]}.pdf`;
                
                doc.save(fileName);

                statusDiv.textContent = `PDF generated successfully! (${PRODUCTS.length} products, ${totalPages} pages)`;
                statusDiv.style.background = '#d4edda';
                statusDiv.style.color = '#155724';
            } catch (error) {
                console.error('PDF generation error:', error);
                statusDiv.textContent = 'Error generating PDF. Please try again.';
                statusDiv.style.background = '#f8d7da';
                statusDiv.style.color = '#721c24';
            }
        }

        // Draw page footer - dark theme
        function drawPageFooter(doc, pageWidth, pageHeight, currentPage, totalPages, date) {
            // Dark footer bar with gold border
            drawRect(doc, 0, pageHeight - 15, pageWidth, 15, COLORS.darkBg);
            doc.setDrawColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
            doc.setLineWidth(1);
            doc.rect(0, pageHeight - 15, pageWidth, 15);
            
            // Page number - gold text
            doc.setTextColor(COLORS.gold[0], COLORS.gold[1], COLORS.gold[2]);
            doc.setFontSize(11);
            doc.setFont(undefined, 'bold');
            doc.text(`Page ${currentPage} of ${totalPages}`, pageWidth / 2, pageHeight - 7, { align: 'center' });
            
            // Company info - white text
            doc.setFontSize(9);
            doc.setFont(undefined, 'normal');
            doc.setTextColor(COLORS.white[0], COLORS.white[1], COLORS.white[2]);
            doc.text('Arjanmal Attarchand | Product Catalog', 10, pageHeight - 6);
        }

        // Event listeners
        document.addEventListener('DOMContentLoaded', () => {
            const industrySelect = document.getElementById('industryFilter');
            const downloadBtn = document.getElementById('downloadPdfBtn');

            downloadBtn.addEventListener('click', async (e) => {
                e.preventDefault();
                downloadBtn.disabled = true;
                downloadBtn.textContent = 'Generating...';

                try {
                    await generateCataloguePdf(industrySelect.value);
                } catch (err) {
                    console.error('Error:', err);
                    alert('Something went wrong while generating the PDF.');
                } finally {
                    downloadBtn.disabled = false;
                    downloadBtn.textContent = 'ðŸ“¥ Download Catalog PDF';
                }
            });
        });
    </script>
