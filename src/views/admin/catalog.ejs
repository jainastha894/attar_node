        // Draw product card with better spacing
        async function drawProductCard(doc, product, x, y, cardWidth, cardHeight) {
            const padding = 4;
            const innerX = x + padding;
            const innerY = y + padding;
            const innerWidth = cardWidth - (padding * 2);
            const innerHeight = cardHeight - (padding * 2);
            
            // Card background with border
            doc.setDrawColor(COLORS.darkGold[0], COLORS.darkGold[1], COLORS.darkGold[2]);
            doc.setLineWidth(0.5);
            drawRect(doc, x, y, cardWidth, cardHeight, COLORS.white);
            doc.rect(x, y, cardWidth, cardHeight);
            
            // Product name header (gold background) - increased font
            const headerHeight = 10;
            drawRect(doc, innerX, innerY, innerWidth, headerHeight, COLORS.gold);
            doc.setTextColor(COLORS.darkBg[0], COLORS.darkBg[1], COLORS.darkBg[2]);
            doc.setFontSize(18);
            doc.setFont(undefined, 'bold');
            const nameLines = doc.splitTextToSize(product.name, innerWidth - 4);
            const nameHeight = nameLines.length * 5.5;
            doc.text(nameLines, innerX + 2, innerY + 6.5);
            
            let currentY = innerY + headerHeight + 4;
            
            // Product images section - reduced height to prevent overlap
            if (product.images && product.images.length > 0) {
                const imageSectionHeight = 30;
                const imageAreaY = currentY;
                const imageAreaHeight = imageSectionHeight;
                const imageAreaWidth = innerWidth;
                
                // Load all images
                const imagePromises = product.images.slice(0, 4).map(img => {
                    const imgPath = img.startsWith('/') ? window.location.origin + img : img;
                    return loadImageAsDataURL(imgPath);
                });
                
                const imageDataArray = await Promise.all(imagePromises);
                const validImages = imageDataArray.filter(img => img !== null);
                
                if (validImages.length > 0) {
                    const imagesPerRow = Math.min(validImages.length, 2);
                    const imageWidth = (imageAreaWidth - (imagesPerRow - 1) * 2) / imagesPerRow;
                    const imageHeight = imageAreaHeight / Math.ceil(validImages.length / 2);
                    
                    validImages.forEach((imgData, idx) => {
                        const row = Math.floor(idx / 2);
                        const col = idx % 2;
                        const imgX = innerX + col * (imageWidth + 2);
                        const imgY = imageAreaY + row * imageHeight;
                        
                        // Image border
                        doc.setDrawColor(200, 200, 200);
                        doc.setLineWidth(0.3);
                        doc.rect(imgX, imgY, imageWidth, imageHeight);
                        
                        // Add image
                        try {
                            doc.addImage(imgData, 'JPEG', imgX + 0.5, imgY + 0.5, imageWidth - 1, imageHeight - 1);
                        } catch (e) {
                            console.error('Error adding image:', e);
                        }
                    });
                }
                
                currentY += imageSectionHeight + 3;
            }
            
            // Description - with better spacing and increased font
            if (product.description && currentY < y + cardHeight - 20) {
                doc.setTextColor(COLORS.textDark[0], COLORS.textDark[1], COLORS.textDark[2]);
                doc.setFontSize(14);
                doc.setFont(undefined, 'normal');
                const descLines = doc.splitTextToSize(product.description, innerWidth - 4);
                const maxDescLines = Math.floor((y + cardHeight - currentY - 15) / 6);
                const displayDescLines = descLines.slice(0, maxDescLines);
                if (displayDescLines.length > 0) {
                    doc.text(displayDescLines, innerX + 2, currentY + 3);
                    currentY += displayDescLines.length * 6 + 2;
                }
            }
            
            // Product details (units) - display ALL details with better spacing, increased font, and fixed alignment
            if (product.units && currentY < y + cardHeight - 12) {
                doc.setFontSize(13);
                doc.setFont(undefined, 'bold');
                doc.setTextColor(COLORS.darkGold[0], COLORS.darkGold[1], COLORS.darkGold[2]);
                
                let detailsY = currentY;
                const maxDetailsHeight = y + cardHeight - detailsY - 8;
                let usedHeight = 0;
                
                // Define order and labels for all unit fields
                const unitOrder = ['industryList', 'subCategoryList', 'sizeList', 'colorList', 'shapeList', 'neckTypeList', 'materialList', 'fragranceList'];
                const unitLabels = {
                    'industryList': 'Industry',
                    'subCategoryList': 'Sub Category',
                    'sizeList': 'Size',
                    'colorList': 'Color',
                    'shapeList': 'Shape',
                    'neckTypeList': 'Neck Type',
                    'materialList': 'Material',
                    'fragranceList': 'Fragrance'
                };
                
                // Display units in order
                for (const key of unitOrder) {
                    if (!product.units[key] || !Array.isArray(product.units[key]) || product.units[key].length === 0) {
                        continue;
                    }
                    
                    if (usedHeight < maxDetailsHeight) {
                        const label = unitLabels[key] || key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase());
                        const valueText = product.units[key].join(', ');
                        doc.setFont(undefined, 'bold');
                        doc.text(`${label}:`, innerX + 2, detailsY);
                        doc.setFont(undefined, 'normal');
                        // Fixed alignment - increased spacing for values
                        const valueLines = doc.splitTextToSize(valueText, innerWidth - 50);
                        const valueHeight = valueLines.length * 5;
                        if (usedHeight + valueHeight <= maxDetailsHeight) {
                            doc.text(valueLines, innerX + 45, detailsY);
                            detailsY += valueHeight;
                            usedHeight += valueHeight;
                        } else {
                            break;
                        }
                    } else {
                        break;
                    }
                }
                
                // Display any remaining units that weren't in the ordered list
                for (const [key, value] of Object.entries(product.units)) {
                    if (unitOrder.includes(key)) continue; // Already displayed
                    if (Array.isArray(value) && value.length > 0 && usedHeight < maxDetailsHeight) {
                        let label = key.replace(/([A-Z])/g, ' $1').replace(/^./, str => str.toUpperCase());
                        const valueText = value.join(', ');
                        doc.setFont(undefined, 'bold');
                        doc.text(`${label}:`, innerX + 2, detailsY);
                        doc.setFont(undefined, 'normal');
                        const valueLines = doc.splitTextToSize(valueText, innerWidth - 50);
                        const valueHeight = valueLines.length * 5;
                        if (usedHeight + valueHeight <= maxDetailsHeight) {
                            doc.text(valueLines, innerX + 45, detailsY);
                            detailsY += valueHeight;
                            usedHeight += valueHeight;
                        } else {
                            break;
                        }
                    }
                }
            }
        }

