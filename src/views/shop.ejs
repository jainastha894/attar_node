      <script>

        // Define applySort function before using it
        function applySort(productsToSort) {
          const sortValue = state.sort || (sortSelect ? sortSelect.value : 'name');
          let sortedProducts = [...productsToSort];

          if (sortValue === "name") {
            sortedProducts.sort((a, b) =>
              a.name.localeCompare(b.name)
            );
          } else if (sortValue === "newest") {
            sortedProducts.sort((a, b) => {
              const dateA = a.createdAt ? new Date(a.createdAt) : new Date(0);
              const dateB = b.createdAt ? new Date(b.createdAt) : new Date(0);
              return dateB - dateA;
            });
          }

          return sortedProducts;
        }

        document.addEventListener("DOMContentLoaded", () => {
          // Apply initial sort
          const initialProducts = applySort(PRODUCTS);
          renderProducts(initialProducts);
          
          // Check if product ID is in URL to open modal
