        function applyFilters(selectedJar) {
          const term = state.search.toLowerCase().trim();
          let products = [...PRODUCTS];

          // Apply industry filter if set from URL
          if (state.industry) {
            products = products.filter(p => {
              const industryList = p.units?.industryList || [];
              return industryList.includes(state.industry);
            });
          }

          // If All selected → no jar/bottle filtering (case-insensitive check)
          if (selectedJar && selectedJar.toLowerCase() === "all") {
            // Apply search filter if any
            if (term) {
              products = products.filter(p => 
                p.name.toLowerCase().includes(term)
              );
            }
            // Apply sort
            products = applySort(products);
            renderProducts(products);
            return;
          }

          let filteredProducts = products.filter(p => {

            /* ---------------- SEARCH FILTER ---------------- */
            if (term && !p.name.toLowerCase().includes(term)) {
              return false;
            }

            /* ---------------- JAR/BOTTLE FILTER (using subCategoryList) ---------------- */
            if (!p.units.subCategoryList) {
              return false;
            }

            if (!p.units.subCategoryList.includes(selectedJar)) {
              return false;
            }

            return true;
          });

          // Apply sort to filtered products
          filteredProducts = applySort(filteredProducts);
          renderProducts(filteredProducts);
        }



        // UI helpers
        function setActive(btns, btn) {
          btns.forEach(b => b.classList.remove('ring-2', 'ring-[color:var(--gold)]', 'border-[color:var(--gold)]'));
          if (btn) { btn.classList.add('ring-2', 'ring-[color:var(--gold)]', 'border-[color:var(--gold)]'); }
        }
        // Detect industry filter from URL and apply it globally
        const urlParams = new URLSearchParams(window.location.search);
        const selectedIndustry = urlParams.get('industry');
        if (selectedIndustry) {
          // Lock industry for this page
          state.industry = selectedIndustry;
          // Filter products by industry on page load
          let industryProducts = PRODUCTS.filter(p => {
            const industryList = p.units?.industryList || [];
            return industryList.includes(selectedIndustry);
          });
          // Apply initial sort
          industryProducts = applySort(industryProducts);
          renderProducts(industryProducts);
        } else {
          // No industry filter - show all products with sort
          const initialProducts = applySort(PRODUCTS);
          renderProducts(initialProducts);
        }
        
        // Handle search query from URL
        const searchQuery = urlParams.get('q');
        if (searchQuery) {
          state.search = searchQuery;
          searchInput.value = searchQuery;
        }


